<tiles-definitions>

	<definition name="template" template="/WEB-INF/tiles-base/template.jsp">
		<put-attribute name="title" value="" />
		<put-attribute name="header" value="/WEB-INF/tiles-base/header.jsp" />
		<put-attribute name="menu" value="" />
		<put-attribute name="body" value="" />
	</definition>

	<!-- Max's definitions! -->
	<definition name="login" extends="template">
		<put-attribute name="title" value="Login page" />
		<put-attribute name="menu" value="/WEB-INF/tiles-base/menu.jsp" />
		<put-attribute name="body"
			value="/WEB-INF/views/authorization/loginForm.jsp" />
	</definition>

	<definition name="register" extends="template">
		<put-attribute name="title" value="Registration" />
		<put-attribute name="body"
			value="/WEB-INF/views/authorization/registrationForm.jsp"></put-attribute>
	</definition>

	<definition name="client.profile" extends="template">
		<put-attribute name="title" value="Personal info" />
		<put-attribute name="menu" value="/WEB-INF/views/client/menu.jsp" />
		<put-attribute name="body" value="/WEB-INF/views/client/profile.jsp" />
	</definition>

	<definition name="client.orders" extends="template">
		<put-attribute name="title" value="User orders" />
		<put-attribute name="menu" value="/WEB-INF/views/client/menu.jsp" />
		<put-attribute name="body" value="/WEB-INF/views/client/orders.jsp" />
	</definition>

	<definition name="client.order" extends="template">
		<put-attribute name="title" expression="Order ${order.id}"></put-attribute>
		<put-attribute name="menu" value="/WEB-INF/views/client/menu.jsp"></put-attribute>
		<put-attribute name="body" value="/WEB-INF/views/client/order.jsp"></put-attribute>
	</definition>


	<definition name="adminPanel" extends="template">
		<put-attribute name="title" value="Admin Panel" />
		<put-attribute name="body" value="/WEB-INF/views/admin/panel.jsp" />
	</definition>

    <definition name="request.provider-panel" extends="template">
		<put-attribute name="title" value="Provider Request Panel" />
		<put-attribute name="body" value="/WEB-INF/views/request/provider-panel.jsp" />
	</definition>

	<!-- Kate's definitions! -->

